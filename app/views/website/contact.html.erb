<div class="vitals-text-container">

    <h2><strong>Contact Me:</strong></h2>
    <br>
    <h3 class="profile-contact">Blog: <%= link_to "Rabbi On Rails", blog_path, target: "_blank" %> | 
    Email: <%= mail_to SocialLinks.email %></h3>
    <h3 class="profile-contact">LinkedIn: <%= link_to "Yechiel Kalmenson", SocialLinks.linkedin, target: "_blank" %> | 
    Github: <%= link_to "achasveachas", SocialLinks.github, target: "_blank" %></h3>
    <h3 class="profile-contact">Twitter: <%= link_to "@yechielk", SocialLinks.twitter, target: "_blank" %> | 
    Quora: <%= link_to "Yechiel Kay", SocialLinks.quora, target: "_blank" %></h3>
    <br><br><br>
    <%= form_tag "https://formspree.io/form@yechiel.me", class: "form-container" do %>
        <%= text_field_tag :name, "", placeholder: "Name:" %><br><br>
        <%= email_field_tag :email, "", placeholder: "Email:" %><br><br>
        <%= text_area_tag :message, "", placeholder: "Your Message:", rows: "10" %><br><br>
        <%= hidden_field_tag :_next, "https://yechiel.me/contact" %>
        <%= hidden_field_tag :_format, "plain" %>
        <%= hidden_field_tag :_subject, "Yechiel Kalmenson Contact Form" %>
        <%= submit_tag "Send", class: "submit" %>
    <% end %>
</div>